@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" id="loading">
    <span>Establishing connection...</span>
</div>

<div>
    Time: <div id="countdown"></div>
</div>

<div class="text-center" id="waiting-next-game-view" style="display:none">
    Please wait for the next game to begin
</div>

<div class="text-center" id="join-game-view" style="display:none">
    <form>
        <div>
            <label for="gamecode">Enter 3 letter game code:</label>
            <input required="required" id="gamecode" pattern="[A-Za-z]{3}" />
        </div>

        <div>
            <label for="name">Name</label>
            <input required="required" id="name" />
        </div>
    </form>
    <input id="join-game-submit" type="submit" />
    <div id="incorrect-game-code" style="display: none" class="alert alert-warning text-center">Invalid game code!</div>
</div>

<div id="join-game-success" class="alert alert-success" role="alert" style="display:none">
    Code accepted. The game will begin soon.
</div>

<div class="text-center" id="answers-view" style="display:none">
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/player.js"></script>
